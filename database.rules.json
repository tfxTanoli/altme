{
    "rules": {
        "users": {
            ".read": "auth != null",
            "$uid": {
                ".write": "$uid === auth.uid"
            }
        },
        "photographerProfiles": {
            ".read": "auth != null",
            ".indexOn": [
                "userId",
                "isAcceptingRequests"
            ],
            "$profileId": {
                ".read": "auth != null",
                ".write": "auth != null && (!data.exists() || data.child('userId').val() === auth.uid) && newData.child('userId').val() === auth.uid"
            }
        },
        "notifications": {
            "$userId": {
                ".read": "auth != null && auth.uid === $userId",
                ".write": "auth != null",
                ".indexOn": [
                    "timestamp"
                ]
            }
        }
    }
}